#include "config.hpp"
#include "create_spi.hpp"
#include "driver/ledc.h"
#include "esp_log.h"
#include "esp_task_wdt.h"
#include "freertos/FreeRTOS.h"
#include "freertos/queue.h"
#include "freertos/task.h"
#include "gptimer.hpp"
#include "icm20602.hpp"
#include "lps25hb.hpp"
#include "servo.hpp"
#include "test_liftoff_accel.hpp"
#include "test_peak_pressure.hpp"

static const char *TAG = "Main";
static QueueHandle_t log_queue;
static QueueHandle_t peak_log_queue;
static Icm20602 *icm_ptr = nullptr;

static Lps25hb *lps_ptr = nullptr;
static LiftoffAccelTest *test_ptr = nullptr;
static PeakPressureTest *peak_test_ptr = nullptr;
static Servo *servo_ptr = nullptr;

// データ構造体の定義を追加
struct SensorReadRequest {
    bool pending;
};

// キューハンドルを追加
static QueueHandle_t sensor_queue;
static QueueHandle_t peak_sensor_queue;

// 関数のプロトタイプ宣言を追加
static void log_task(void *pvParameters);
static void liftoff_detection_task(void *pvParameters);

// ログ出力タスク
static void log_task(void *pvParameters) {
    ESP_ERROR_CHECK(esp_task_wdt_add(NULL));
    ESP_LOGI(TAG, "log_task started");
    static const char *LOGTAG = "LiftoffTest";

    // 加速度センサー用のログデータ
    LogData accel_log_data;
    // 気圧センサー用のログデータ
    PressureLogData pressure_log_data;

    while (1) {
        // 加速度センサーのログを処理
        if (xQueueReceive(log_queue, &accel_log_data, 0)) {  // タイムアウトを0に変更
            ESP_LOGI(LOGTAG, "Accel: %lu,%.3f,%d", accel_log_data.timestamp, accel_log_data.norm2, accel_log_data.count);
        }

        // 気圧センサーのログを処理
        if (xQueueReceive(peak_log_queue, &pressure_log_data, 0)) {  // タイムアウトを0に変更
            ESP_LOGI(LOGTAG, "Pressure: %lu,%.3f,%d", pressure_log_data.timestamp, pressure_log_data.pressure, pressure_log_data.count);
        }

        vTaskDelay(pdMS_TO_TICKS(10));  // 10msごとにチェック
        esp_task_wdt_reset();
    }
}

// タイマーコールバック関数を修正
static bool IRAM_ATTR timer_callback(gptimer_handle_t timer, const gptimer_alarm_event_data_t *edata, void *user_ctx) {
    static SensorReadRequest req = {true};
    xQueueSendFromISR(sensor_queue, &req, NULL);
    return true;
}

static bool IRAM_ATTR peak_timer_callback(gptimer_handle_t timer, const gptimer_alarm_event_data_t *edata, void *user_ctx) {
    static SensorReadRequest req = {true};
    xQueueSendFromISR(peak_sensor_queue, &req, NULL);
    return true;
}

// メインの処理タスクを修正
static void liftoff_detection_task(void *pvParameters) {
    ESP_ERROR_CHECK(esp_task_wdt_add(NULL));

    CreateSpi spi;
    Icm20602 icm;
    Lps25hb lps;
    LiftoffAccelTest test(log_queue);
    PeakPressureTest peak_test(peak_log_queue);
    Servo servo(config::pins.SERVO);

    // グローバルポインタを設定
    icm_ptr = &icm;
    test_ptr = &test;
    servo_ptr = &servo;

    // サーボの初期化
    servo.setAngle(30);

    // SPIの初期化
    if (!spi.begin(SPI2_HOST, config::pins.SCK, config::pins.MISO, config::pins.MOSI)) {
        ESP_LOGE(TAG, "Failed to initialize SPI");
        vTaskDelete(NULL);
        return;
    }

    ESP_LOGI(TAG, "SPI initialized successfully");

    // ICM20602の初期化
    if (!icm.begin(&spi, config::pins.ICMCS)) {
        ESP_LOGE(TAG, "Failed to initialize ICM20602");
        vTaskDelete(NULL);
        return;
    }

    if (!icm.isInitialized()) {
        ESP_LOGE(TAG, "Failed to initialize ICM20602");
        vTaskDelete(NULL);
        return;
    }

    // WHO_AM_Iの確認
    uint8_t who_am_i = icm.whoAmI();
    ESP_LOGI(TAG, "WHO_AM_I value: 0x%02x (Expected: 0x%02x)", who_am_i, Icm20602Config::WHO_AM_I_VALUE);

    if (!lps.begin(&spi, config::pins.LPSCS)) {
        ESP_LOGE(TAG, "Failed to initialize LPS25HB");
        vTaskDelete(NULL);
        return;
    }

    ESP_LOGI(TAG, "Starting liftoff detection test...");
    ESP_LOGI(TAG, "Please shake the board to simulate liftoff...");

    // センサー読み取り用キューの作成
    sensor_queue = xQueueCreate(1, sizeof(SensorReadRequest));
    peak_sensor_queue = xQueueCreate(1, sizeof(SensorReadRequest));

    // タイマーの設定
    GPTimer timer_1k;
    GPTimer timer_25;
    const uint32_t TIMER_RESOLUTION_HZ = 1000000;                // 1MHz
    const uint64_t ALARM_COUNT_1k = TIMER_RESOLUTION_HZ / 1000;  // 1kHz (1ms)
    const uint64_t ALARM_COUNT_25 = TIMER_RESOLUTION_HZ / 25;    // 25Hz (40ms)

    if (!timer_1k.init(TIMER_RESOLUTION_HZ, ALARM_COUNT_1k)) {
        ESP_LOGE(TAG, "Failed to initialize timer");
        vTaskDelete(NULL);
        return;
    }

    // コールバック関数の登録を追加
    if (!timer_1k.registerCallback(timer_callback)) {
        ESP_LOGE(TAG, "Failed to register timer callback");
        vTaskDelete(NULL);
        return;
    }

    if (!timer_25.init(TIMER_RESOLUTION_HZ, ALARM_COUNT_25)) {
        ESP_LOGE(TAG, "Failed to initialize timer");
        vTaskDelete(NULL);
        return;
    }

    if (!timer_25.registerCallback(peak_timer_callback)) {
        ESP_LOGE(TAG, "Failed to register timer callback");
        vTaskDelete(NULL);
        return;
    }

    if (!timer_1k.start()) {
        ESP_LOGE(TAG, "Failed to start timer");
        vTaskDelete(NULL);
        return;
    }

    if (!timer_25.start()) {
        ESP_LOGE(TAG, "Failed to start timer");
        vTaskDelete(NULL);
        return;
    }

    SensorReadRequest req;
    while (!test.isDetected()) {
        if (xQueueReceive(sensor_queue, &req, 0)) {
            Icm20602Data data;

            icm.get(&data);
            test.processData(data.accel.x, data.accel.y, data.accel.z);
        }
        esp_task_wdt_reset();
    }

    float liftoff_time = esp_timer_get_time() / 1000;

    ESP_LOGI(TAG, "Liftoff detected! Moving servo...");
    servo.setAngle(180);
    timer_1k.stop();

    ESP_LOGI(TAG, "Waiting for engine ignition...");
    while (1) {
        float current_time = esp_timer_get_time() / 1000;
        if (current_time - liftoff_time > 3000) {
            break;
        }
        esp_task_wdt_reset();
    }
    ESP_LOGI(TAG, "Engine ignition finished");

    while (!peak_test.isDetected()) {
        if (xQueueReceive(peak_sensor_queue, &req, 0)) {
            Lps25hbData pressure_data;
            lps.get(&pressure_data);
            peak_test.processData(pressure_data.pressure);
        }
        esp_task_wdt_reset();
    }

    ESP_LOGI(TAG, "Peak detected!, time: %.3f", esp_timer_get_time() / 1000 - liftoff_time);
    servo.setAngle(30);

    // タイマーを停止
    timer_25.stop();

    // WDTを無効化
    ESP_ERROR_CHECK(esp_task_wdt_delete(NULL));

    ESP_LOGI(TAG, "Test completed!");
    vTaskDelete(NULL);
}

// app_main関数を正しく定義
extern "C" void app_main(void) {
    // キューの作成
    log_queue = xQueueCreate(10, sizeof(LogData));
    peak_log_queue = xQueueCreate(10, sizeof(PressureLogData));

    // ログタスクの作成（CPU0で実行）
    xTaskCreatePinnedToCore(log_task, "log_task", 4096, NULL, 1, NULL, 0);

    // 検知タスクの作成（CPU1で実行）
    xTaskCreatePinnedToCore(liftoff_detection_task, "liftoff_task", 8192, NULL, 1, NULL, 1);
}